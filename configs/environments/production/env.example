# Production Environment Configuration

# Service Configuration
LOG_LEVEL=INFO
ENABLE_CORS=false
PARALLELISM=8

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka-1:9092,kafka-2:9092,kafka-3:9092
SCHEMA_REGISTRY_URL=http://schema-registry:8081

# ClickHouse Configuration
CLICKHOUSE_DSN=clickhouse://carbon_user:CHANGE_ME@clickhouse-cluster:9000/carbon_ingestion

# Redis Configuration
REDIS_URL=redis://redis-cluster:6379/0
REDIS_PASSWORD=CHANGE_ME

# Connector Configuration
CAISO_BASE_URL=https://oasis.caiso.com/oasisapi
CAISO_TIMEOUT=60
CAISO_API_KEY=CHANGE_ME
CAISO_RATE_LIMIT=100

MISO_BASE_URL=https://api.misoenergy.org
MISO_TIMEOUT=60
MISO_API_KEY=CHANGE_ME
MISO_RATE_LIMIT=100

# Service-Specific Configuration
NORMALIZATION_CONFIG=/app/configs/normalization_rules.yaml
ENRICHMENT_CONFIG=/app/configs/enrichment_taxonomy.yaml
AGGREGATION_CONFIG=/app/configs/aggregation_policies.yaml
PROJECTION_CONFIG=/app/configs/projection_policies.yaml
DATA_QUALITY_CONFIG=/app/configs/data_quality_rules.yaml

# Observability Configuration
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
JAEGER_ENDPOINT=http://jaeger-collector:14268/api/traces
OTLP_ENDPOINT=http://otel-collector:4317

# Security Configuration
ENABLE_MTLS=true
TLS_CERT_PATH=/app/certs/service.crt
TLS_KEY_PATH=/app/certs/service.key
TLS_CA_PATH=/app/certs/ca.crt

# Performance Tuning
CONNECTION_POOL_SIZE=20
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT_SECONDS=120
BATCH_SIZE=2000

# Production Features
ENABLE_DEBUG_LOGGING=false
ENABLE_PROFILING=false
ENABLE_MOCK_DATA=false
ENABLE_AUTO_SCALING=true
ENABLE_CIRCUIT_BREAKER=true
