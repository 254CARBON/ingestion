# Staging Environment Configuration

# Service Configuration
LOG_LEVEL=INFO
ENABLE_CORS=true
PARALLELISM=4

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka-staging:9092
SCHEMA_REGISTRY_URL=http://schema-registry-staging:8081

# ClickHouse Configuration
CLICKHOUSE_DSN=clickhouse://carbon_user:CHANGE_ME@clickhouse-staging:9000/carbon_ingestion

# Redis Configuration
REDIS_URL=redis://redis-staging:6379/0

# Connector Configuration
CAISO_BASE_URL=https://oasis.caiso.com/oasisapi
CAISO_TIMEOUT=45
CAISO_API_KEY=CHANGE_ME

MISO_BASE_URL=https://api.misoenergy.org
MISO_TIMEOUT=45
MISO_API_KEY=CHANGE_ME

# Service-Specific Configuration
NORMALIZATION_CONFIG=/app/configs/normalization_rules.yaml
ENRICHMENT_CONFIG=/app/configs/enrichment_taxonomy.yaml
AGGREGATION_CONFIG=/app/configs/aggregation_policies.yaml
PROJECTION_CONFIG=/app/configs/projection_policies.yaml
DATA_QUALITY_CONFIG=/app/configs/data_quality_rules.yaml

# Observability Configuration
PROMETHEUS_URL=http://prometheus-staging:9090
GRAFANA_URL=http://grafana-staging:3000
JAEGER_ENDPOINT=http://jaeger-staging:14268/api/traces
OTLP_ENDPOINT=http://otel-collector-staging:4317

# Security Configuration
ENABLE_MTLS=false
TLS_CERT_PATH=/app/certs/service.crt
TLS_KEY_PATH=/app/certs/service.key

# Performance Tuning
CONNECTION_POOL_SIZE=10
MAX_CONCURRENT_REQUESTS=30
REQUEST_TIMEOUT_SECONDS=90
BATCH_SIZE=1000

# Staging Features
ENABLE_DEBUG_LOGGING=true
ENABLE_PROFILING=true
ENABLE_MOCK_DATA=false
ENABLE_AUTO_SCALING=false
